%head
  %link{rel: "stylesheet", href: "https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css"}
  %link{rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"}
  %script{src: "https://code.jquery.com/jquery-3.6.0.min.js"}
  %script{src: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"}
  %style
    :css
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap');

      body {
        font-family: 'Montserrat', sans-serif;
        color: #fff;
        background-color: #0b1a2a;
      }
      
      .menu-container {
        padding: 5rem 3rem;
        background-color: #0b1a2a;
      }

      .menu-page {
        background-color: #fff;
        color: #000;
        padding: 4rem 5rem;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        position: relative;
      }

      .main-title {
        font-family: 'Playfair Display', serif;
        font-size: 5rem;
        line-height: 1;
        font-weight: 700;
        color: #000;
      }

      .sub-title {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        letter-spacing: 4px;
        font-size: 1.2rem;
        margin-top: -1rem;
        margin-bottom: 2rem;
      }

      .section-header {
        background-color: #c93b33;
        color: #fff;
        padding: 0.5rem 1rem;
        font-weight: 700;
        letter-spacing: 2px;
        font-size: 1.2rem;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
      }

      .menu-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        border-bottom: 1px dashed #e0e0e0;
        padding-bottom: 0.5rem;
      }

      .item-name {
        font-weight: 700;
        font-size: 1.1rem;
        flex-grow: 1;
        margin-right: 1rem;
      }
      
      .item-price {
        font-weight: 700;
        font-size: 1.1rem;
        white-space: nowrap;
      }
      
      .menu-footer {
        background-color: #0b1a2a;
        color: #fff;
        padding: 1rem;
        text-align: center;
        font-weight: 700;
        letter-spacing: 2px;
        margin-top: 3rem;
      }

      .dish-icon-veg {
        color: #28a745;
      }

      .dish-icon-non-veg {
        color: #dc3545;
      }

      .dish-icon-unavailable {
        color: #888;
      }

      .quantity-selector {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-left: 1rem;
      }

      .quantity-selector button {
        border: none;
        background: #c93b33;
        color: white;
        padding: 0.3rem 0.6rem;
        font-size: 1rem;
        border-radius: 5px;
      }

      .total-section {
        margin-top: 2rem;
        font-size: 1.2rem;
        font-weight: bold;
        text-align: right;
      }

      .bill-header {
        text-align: center;
        margin-bottom: 1rem;
      }

      .bill-header h4 {
        font-weight: bold;
        margin-bottom: 0.2rem;
      }

      .bill-header small {
        color: #555;
      }

%div.container-fluid.menu-container
  %div.row.justify-content-center
    %div.col-lg-8.col-md-10
      %div.menu-page
        %div.d-flex.justify-content-between.align-items-center.mb-5
          %div
            %h1.main-title= @restaurant.name
            %h2.sub-title DINNER MENU
          - if current_user.staff?
            %div
              = link_to '‚ûï Add New Item', new_restaurant_menu_item_path(@restaurant), class: "btn btn-outline-dark"

        - if @menu_items.any?
          - @menu_items.group_by(&:category).each do |category, items|
            %div.section-header
              = category
            - items.each do |item|
              %div.menu-item{ data: { id: item.id, price: item.price, name: item.item_name } }
                %div
                  %span.item-name= item.item_name
                  - if item.is_vegetarian
                    %i.fas.fa-leaf.dish-icon-veg.ms-2
                  - else
                    %i.fas.fa-drumstick-bite.dish-icon-non-veg.ms-2
                  - unless item.available
                    %i.fas.fa-ban.dish-icon-unavailable.ms-2
                  %p.text-muted.mt-1= item.description
                %div.d-flex.align-items-center
                  %span.item-price= "‚Çπ#{item.price}"
                  - if current_user.staff?
                    %div.action-buttons.ms-3
                      = link_to '‚úèÔ∏è', edit_restaurant_menu_item_path(@restaurant, item), class: "btn btn-sm btn-outline-secondary"
                      %form{ action: restaurant_menu_item_path(@restaurant, item), method: "post", onsubmit: "return confirm('Are you sure?');", class: "d-inline" }
                        = hidden_field_tag :_method, "delete"
                        = hidden_field_tag :authenticity_token, form_authenticity_token
                        %button.btn.btn-sm.btn-outline-danger{ type: "submit" }
                          üóëÔ∏è
                  - else
                    %div.quantity-selector
                      %button.btn-decrease - 
                      %span.quantity 0
                      %button.btn-increase +

          %div.total-section
            Total: ‚Çπ<span id="total-price">0</span>

          %div.text-end.mt-3
            %button.btn.btn-success#confirm-order Confirm Order

        - else
          %div.alert.alert-info.text-center.mt-5
            %i.fas.fa-info-circle.me-2
            No menu items found. Why not add some?

        %div.menu-footer ENJOY YOUR MEAL !

/ Modal for invoice (Bill style)
.modal.fade#invoiceModal{ tabindex: "-1" }
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h5.modal-title Order Invoice
        %button.btn-close{ type: "button", data: { bs_dismiss: "modal" } }
      .modal-body
        .bill-header
          %h4= @restaurant.name
          %small= Time.now.strftime("%d %B %Y, %I:%M %p")
        %table.table.table-bordered
          %thead.table-light
            %tr
              %th Item
              %th.text-center Qty
              %th.text-end Price
              %th.text-end Subtotal
          %tbody#invoice-list
          %tfoot
            %tr
              %th{ colspan: "3", class: "text-end" } Total
              %th.text-end#invoice-total 0
      .modal-footer
        = form_with url: restaurant_reservation_orders_path(@restaurant, @reservation), method: :post, local: true, id: 'order_form' do
          = hidden_field_tag 'order[items]', '', id: 'order_items'
          %button.btn.btn-secondary{ type: "button", data: { bs_dismiss: "modal" } } Close
          %button.btn.btn-primary{ type: "submit" } Place Order

:javascript
  $(document).ready(function() {
    function updateTotal() {
      let total = 0;
      $('.menu-item').each(function() {
        let qty = parseInt($(this).find('.quantity').text());
        let price = parseFloat($(this).data('price'));
        total += qty * price;
      });
      $('#total-price').text(total.toFixed(2));
    }

    $('.btn-increase').click(function() {
      let qtyElem = $(this).siblings('.quantity');
      let qty = parseInt(qtyElem.text()) + 1;
      qtyElem.text(qty);
      updateTotal();
    });

    $('.btn-decrease').click(function() {
      let qtyElem = $(this).siblings('.quantity');
      let qty = parseInt(qtyElem.text());
      if (qty > 0) {
        qtyElem.text(qty - 1);
        updateTotal();
      }
    });

    $('#confirm-order').click(function() {
      $('#invoice-list').empty();
      let total = 0;
      $('.menu-item').each(function() {
        let qty = parseInt($(this).find('.quantity').text());
        let name = $(this).data('name');
        let price = parseFloat($(this).data('price'));
        if (qty > 0) {
          let subtotal = qty * price;
          $('#invoice-list').append(`
            <tr>
              <td>${name}</td>
              <td class="text-center">${qty}</td>
              <td class="text-end">‚Çπ${price.toFixed(2)}</td>
              <td class="text-end">‚Çπ${subtotal.toFixed(2)}</td>
            </tr>
          `);
          total += subtotal;
        }
      });
      $('#invoice-total').text(`‚Çπ${total.toFixed(2)}`);
      $('#invoiceModal').modal('show');
    });

    $('#order_form').submit(function(e) {
      let items = [];
      $('.menu-item').each(function() {
        let qty = parseInt($(this).find('.quantity').text());
        if (qty > 0) {
          items.push({
            item_id: $(this).data('id'),
            name: $(this).data('name'),
            price: $(this).data('price'),
            quantity: qty
          });
        }
      });
      if (items.length === 0) {
        alert("Please select at least one item.");
        e.preventDefault();
        return false;
      }
      $('#order_items').val(JSON.stringify(items));
    });
  });
